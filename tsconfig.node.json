{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,

		/* Paths */
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@config/*": ["src/config/*"],
			"@styles/*": ["src/styles/*"],
			"@fonts/*": ["src/fonts/*"],
			"@images/*": ["src/images/*"],
			"@icons/*": ["src/icons/*"],
			"@illustrations/*": ["src/illustrations/*"],
			"@providers/*": ["src/providers/*"],
			"@components/*": ["src/components/*"],
			"@screens/*": ["src/screens/*"],
			"@utils/*": ["src/utils/*"],
			"@services/*": ["src/services/*"],
			"@store/*": ["src/store/*"],
			"@ts/*": ["src/types/*"],
			"@modules/*": ["src/modules/*"],
			"@layouts/*": ["src/layouts/*"],
			"@hooks/*": ["src/hooks/*"],
			"@hooks": ["src/hooks"],
			"@ui/*": ["src/ui/*"],
			"@forms/*": ["src/forms/*"]
		}
	},
	"include": ["vite.config.ts"]
}
